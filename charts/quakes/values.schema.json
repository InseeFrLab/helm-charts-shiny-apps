{
  "$schema":"http://json-schema.org/schema#",
  "type":"object",
  "properties":{
    "shiny":{
      "type":"object",
      "properties":{
        "service":{
          "description":"Service specific configuration",
          "type":"object",
          "properties":{
            "image":{
              "description":"image docker",
              "type":"object",
              "properties":{
                "pullPolicy":{
                  "type":"string",
                  "description":"option when pulling the docker image",
                  "default":"IfNotPresent",
                  "enum":[
                    "IfNotPresent",
                    "Always",
                    "Never"
                  ]
                },
                "version":{
                  "description":"supported versions",
                  "type":"string",
                  "enum":[
                    "inseefrlab/shiny-app-template:1.0.1"
                  ],
                  "pattern":"^[a-z0-9-_./]+(:[a-z0-9-_.]+)?$",
                  "default":"inseefrlab/shiny-app-template:1.0.1"
                }
              }
            }
          }
        },
        "security":{
          "description":"security specific configuration",
          "type":"object",
          "properties":{
            "password":{
              "type":"string",
              "description":"Password",
              "default":"changeme",
              "x-form":{
                "value":"{{project.password}}"
              },
              "x-onyxia":{
                "value":"{{project.password}}"
              }
            },
            "allowlist":{
              "type":"object",
              "description":"IP protection",
              "properties":{
                "enabled":{
                  "type":"boolean",
                  "title":"Enable IP protection",
                  "description":"Only the configured set of IPs will be able to reach the service",
                  "default":true,
                  "x-form":{
                    "value":"{{region.defaultIpProtection}}"
                  },
                  "x-onyxia": {
                      "overwriteDefaultWith": "region.defaultIpProtection"
                  }
                },
                "ip":{
                  "type":"string",
                  "description":"the white list of IP is whitespace",
                  "title":"Whitelist of IP",
                  "x-form":{
                    "value":"{{user.ip}}"
                  },
                  "x-onyxia": {
                      "overwriteDefaultWith": "{{user.ip}}"
                  },
                  "hidden":{
                    "value": false,
                    "path": "shiny/security/allowlist/enabled"
                  }
                }
              }
            },
            "networkPolicy":{
              "type":"object",
              "description":"Define access policy to the service",
              "properties":{
                "enabled":{
                  "type":"boolean",
                  "title":"Enable network policy",
                  "description":"Only pod from the same namespace will be allowed",
                  "default":true,
                  "x-form":{
                    "value":"{{region.defaultNetworkPolicy}}"
                  },
                  "x-onyxia": {
                      "overwriteDefaultWith": "region.defaultNetworkPolicy"
                  }
                }
              }
            }
          }
        },
        "s3":{
          "description":"Configuration of temporary S3 identity",
          "type":"object",
          "properties":{
            "accessKeyId":{
              "description":"AWS Access Key",
              "type":"string",
              "x-form":{
                "value":"{{s3.AWS_ACCESS_KEY_ID}}"
              },
              "x-onyxia":{
                "value":"{{s3.AWS_ACCESS_KEY_ID}}"
              },
              "hidden": {
                  "value": true
              }
            },
            "endpoint":{
              "description":"AWS S3 Endpoint",
              "type":"string",
              "x-form":{
                "value":"{{s3.AWS_S3_ENDPOINT}}"
              },
              "x-onyxia":{
                "value":"{{s3.AWS_S3_ENDPOINT}}"
              },
              "hidden": {
                  "value": true
              }
            },
            "defaultRegion":{
              "description":"AWS S3 default region",
              "type":"string",
              "x-form":{
                "value":"{{s3.AWS_DEFAULT_REGION}}"
              },
              "x-onyxia":{
                "value":"{{s3.AWS_DEFAULT_REGION}}"
              },
              "hidden": {
                  "value": true
              }
            },
            "secretAccessKey":{
              "description":"AWS S3 secret access key",
              "type":"string",
              "x-form":{
                "value":"{{s3.AWS_SECRET_ACCESS_KEY}}"
              },
              "x-onyxia":{
                "value":"{{s3.AWS_SECRET_ACCESS_KEY}}"
              },
              "hidden": {
                  "value": true
              }
            },
            "sessionToken":{
              "description":"AWS S3 session Token",
              "type":"string",
              "x-form":{
                "value":"{{s3.AWS_SESSION_TOKEN}}"
              },
              "x-onyxia":{
                "value":"{{s3.AWS_SESSION_TOKEN}}"
              },
              "hidden": {
                  "value": true
              }
            }
          }
        },
        "postgresql":{
          "description":"Configuration of PostgreSQL database",
          "type":"object",
          "properties":{
            "auth":{
              "type":"object",
              "description":"Authentification parameters",
              "properties":{
                "username":{
                  "type":"string",
                  "title":"Username",
                  "x-form":{
                    "value":"{{project.id}}"
                  },
                  "x-onxyia":{
                    "value":"{{project.id}}"
                  },
                  "hidden": {
                      "value": true
                  }
                },
                "password":{
                  "type":"string",
                  "title":"User password",
                  "x-form":{
                    "value":"{{project.password}}"
                  },
                  "x-onxyia":{
                    "value":"{{project.password}}"
                  },
                  "hidden": {
                      "value": true
                  }
                },
                "database":{
                  "type":"string",
                  "title":"Database",
                  "x-form":{
                    "value":"defaultdb"
                  },
                  "x-onxyia":{
                    "value":"defaultdb"
                  },
                  "hidden": {
                      "value": true
                  }
                }
              }
            }
          }
        },
        "ingress":{
          "type":"object",
          "form":true,
          "title":"Ingress Details",
          "properties":{
            "hostname":{
              "type":"string",
              "form":true,
              "title":"Hostname",
              "x-form":{
                "value":"{{project.id}}-{{k8s.randomSubdomain}}.{{k8s.domain}}"
              },
              "x-onyxia": {
                "overwriteDefaultWith": "{{project.id}}-{{k8s.randomSubdomain}}.{{k8s.domain}}"
              }
            },
            "ingressClassName": {
              "type": "string",
              "form": true,
              "title": "ingressClassName",
              "default": "",
              "x-form": {
                "hidden": true,
                "value": "{{k8s.ingressClassName}}"
              },
              "x-onyxia": {
                "hidden": true,
                "overwriteDefaultWith": "{{k8s.ingressClassName}}"
              }
            }
          }
        }
      }
    }
  }
}